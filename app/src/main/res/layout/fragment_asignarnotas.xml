<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.asignarnota.AsignarNotas">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/N2txtListaCursos"
        android:textAlignment="center"
        android:layout_marginVertical="40dp"
        android:paddingVertical="10dp"
        android:background="@color/purple_txts"
        android:textColor="@color/white"
        android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:padding="20dp"
            android:background="@drawable/efredformulario2">
            <Spinner
                android:id="@+id/spiANCursos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                >
            </Spinner>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lytAN2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/N2txtCriterio"
            android:textAlignment="center"
            android:layout_marginVertical="40dp"
            android:paddingVertical="10dp"
            android:background="@color/purple_txts"
            android:textColor="@color/white"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:padding="20dp"
            android:background="@drawable/efredformulario2">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="@string/N2txtCriterio"
                app:helperTextTextColor="@color/purple_500">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtANCriterio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/N2edtIngresarCriterio"
                    android:cursorVisible="true"
                    ></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnANIrCalificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="@string/N2btnPonerNotas"
            android:background="@drawable/efredbotones2"
            app:icon="@drawable/ic_ponernotas"
            ></com.google.android.material.button.MaterialButton>
    </LinearLayout>


</LinearLayout>