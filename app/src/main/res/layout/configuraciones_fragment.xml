<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.configuraciones.Configuraciones">

    <RelativeLayout
        android:id="@+id/RlyEditPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_margin="20dp"
        android:background="@drawable/efredbuttonsv2">

        <ImageView
            android:id="@+id/imgv_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/usuario" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginVertical="5dp"
            android:layout_toEndOf="@id/imgv_icon"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/imgv_icon"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtEditPerfil"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtEditPerfilDes"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RlyChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/efredbuttonsv2">

        <ImageView
            android:id="@+id/imgv_icon1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/clave"
            tools:ignore="DuplicateIds" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginVertical="5dp"
            android:layout_toEndOf="@id/imgv_icon1"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/imgv_icon1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtChangPass"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtChangPassDes"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/N4txtPreferencias"
        android:textAlignment="center"
        android:layout_marginVertical="40dp"
        android:paddingVertical="10dp"
        android:background="@color/purple_txts"
        android:textColor="@color/white"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="1dp"
        android:padding="10dp"
        android:background="@drawable/efredformulario2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/N4txtSeleccionarTema"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            ></TextView>

        <Spinner
            android:id="@+id/spiTema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/Tema"
            android:spinnerMode="dropdown"
            android:layout_gravity="center"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:padding="10dp"
        android:background="@drawable/efredformulario2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/N4txtSeleccionarIdioma"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            ></TextView>

        <Spinner
            android:id="@+id/spiIdioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/Idioma"
            android:spinnerMode="dropdown"
            android:layout_gravity="center"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/efredformulario2"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:text="@string/N4txtSeleccionarTamaL"
            android:textAlignment="textStart"
            android:textStyle="bold"></TextView>

        <Spinner
            android:id="@+id/spiTamFuen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:entries="@array/TamaLetra"
            android:spinnerMode="dropdown"></Spinner>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="50dp"
        android:text="@string/N4btnGuardarCambios"
        android:background="@drawable/efredbotones2"
        app:icon="@drawable/ic_guardar"></com.google.android.material.button.MaterialButton>


</LinearLayout>